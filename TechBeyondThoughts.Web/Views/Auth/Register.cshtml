@model RegistrationRequestDto
<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-6 offset-3 pb-2">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Email" data-val="true" data-val-required="Email is required">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-6 offset-3 pb-2">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name" data-val="true" data-val-required="Name is required">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-6 offset-3 pb-2">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber" data-val="true" data-val-required="PhoneNumber is required">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-6 offset-3 pb-2">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" placeholder="Password" data-val="true" data-val-required="Password is required">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-6 offset-3 pb-2">
                    <label asp-for="Role"></label>
                    <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList" data-val="true" data-val-required="Role is required">
                        <option disabled selected>--Select Role--</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="col-6 offset-3 pb-2">
                    <button type="submit" class="form-control btn btn-success" value="Submit">Register</button>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}