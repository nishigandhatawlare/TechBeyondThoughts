@model TechDataDto

<form asp-action="DeleteTech" asp-route-techId="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" type="text" class="form-control" id="title" disabled>
        <input asp-for="Title" type="hidden" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" class="form-control" id="description" rows="4" disabled></textarea>
        <input asp-for="Description" type="hidden" />
    </div>

    <div class="form-group">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" type="text" class="form-control" id="category" disabled placeholder="Enter technology category" required>
        <input asp-for="Category" type="hidden" />
    </div>

    <div class="form-group">
        <label asp-for="InventorName">Inventor's Name:</label>
        <input asp-for="InventorName" type="text" class="form-control" id="inventorName" disabled placeholder="Enter inventor's name" required>
        <input asp-for="InventorName" type="hidden" />
    </div>

    <div class="form-group">
        <label asp-for="InventionDate">Invention Date:</label>
        <input asp-for="InventionDate" type="date" class="form-control" id="inventionDate" disabled required>
        <input asp-for="InventionDate" type="hidden" />
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl">Image URL:</label>
        <input asp-for="ImageUrl" type="url" class="form-control" id="imageUrl" disabled placeholder="Enter image URL" required>
        <input asp-for="ImageUrl" type="hidden" />
    </div>

    <button type="submit" class="btn btn-primary">Delete Technology</button>
</form>
